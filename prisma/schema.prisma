model AutomationRule {
  id          String    @id @default(cuid())
  name        String
  description String?
  enabled     Boolean   @default(true)
  trigger     String
  conditions  Json
  actions     Json
  metadata    Json?
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId   String
  runs        AutomationRun[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([projectId])
  @@index([trigger])
  @@index([enabled])
}

model AutomationRun {
  id          String    @id @default(cuid())
  rule        AutomationRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  ruleId      String
  trigger     String
  context     Json
  success     Boolean
  error       Json?
  createdAt   DateTime  @default(now())

  @@index([ruleId])
  @@index([trigger])
  @@index([success])
  @@index([createdAt])
}
