  STANDARD
  COMPACT
  EXPANDED
  PRESENTATION
}

enum AnimationLevel {
  NONE
  MINIMAL
  MODERATE
  FULL
}

enum CardStyle {
  CLASSIC
  MODERN
  MINIMAL
  CREATIVE
  PROFESSIONAL
}

enum ExpertiseLevel {
  NOVICE
  INTERMEDIATE
  ADVANCED
  EXPERT
}

enum MentorshipStatus {
  AVAILABLE
  BUSY
  ON_BREAK
  INACTIVE
}

enum EventType {
  CONFERENCE
  WEBINAR
  WORKSHOP
  PANEL
  KEYNOTE
  PODCAST
  INTERVIEW
}
